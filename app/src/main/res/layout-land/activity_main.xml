<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kim.wishlistapp.MainActivity"
    android:background="#f3dfc1">

    <TextView
        android:id="@+id/textView"
        android:text="MY DAILY NOTES"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:textColor="#7d5401"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="300dp"
        android:layout_marginTop="12dp"
        android:background="#db7a03"
        android:hint="(Enter Note Title)"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#fcf402"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/noteEditText"
        android:background="#fcef7e"
        android:gravity="start"
        android:hint="(Note Details...)"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:textStyle="bold|italic"
        android:textSize="18dp"
        android:textColor="#a65f03"

        android:layout_below="@+id/titleEditText"
        android:layout_alignStart="@+id/titleEditText"
        android:layout_above="@+id/saveButton" />
    <Button
        android:id="@+id/saveButton"
        android:text="SAVE NOTES"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#fdcd81"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#fc0404"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/noteEditText" />
</RelativeLayout>
