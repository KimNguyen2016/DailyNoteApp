<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kim.wishlistapp.MainActivity"
    android:background="#f3dfc1">

    <TextView
        android:id="@+id/textView"
        android:text="MY DAILY NOTES"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:textColor="#7d5401" />

    <EditText
        android:id="@+id/titleEditText"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:layout_width="300dp"
        android:layout_marginTop="60dp"
        android:background="#db7a03"
        android:hint="(Enter Note Title)"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#fcf402" />

    <EditText
        android:id="@+id/noteEditText"
        android:background="#fcef7e"
        android:gravity="start"
        android:hint="(Note Details...)"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/titleEditText"
        android:textColor="#a65f03" />
    <Button
        android:id="@+id/saveButton"
        android:text="SAVE NOTES"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/noteEditText"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/noteEditText"
        android:layout_alignStart="@+id/noteEditText"
        android:background="#fdcd81"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#fc0404" />
</RelativeLayout>
